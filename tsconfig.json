{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",       // Adjust rootDir to include all source files
    "outDir": "./dist/src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "router/**/*"],  // Include all necessary directories
  "exclude": ["node_modules"]
}
